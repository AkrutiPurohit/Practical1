//Write C++ Program To Find If A Character Is Vowel Or Consonant using function.

#include<iostream>
#include<math.h>
using namespace std;

void check(char ch)
{
 
    if(ch=='a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u' ||ch == 'A' || ch == 'E' || ch == 'I' || ch == 'O' || ch == 'U')
    {
        cout<<"The character is vowel";
    }
    else
    {
        cout<<"The character is consonant";
    }
}

int main()
{
    
    cout<<"Purohit Akruti K."<<endl;
    cout<<"220130318033"<<endl;
    char ch;
    cout<<"Enter the character:";
    cin>>ch;
    
    check(ch);

    return 0;
}
