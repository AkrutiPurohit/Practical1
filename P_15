//Write C++ Program to Check Whether a Number is Prime or Not using function.

#include<iostream>
using namespace std;

void prime(int n)
{
    int i,ans=0;
    for(i=2;i<=n;i++)
    {
        if(n/i==0)
        {
            cout<<"Entered number is not prime number";
            break;
        }
        else
        {
            cout<<"Entered number is prime number";
            break;
        }
    }
}
int main()
{
    cout<<"Purohit Akruti K."<<endl;
    cout<<"220130318033"<<endl;
    int num;
    cout<<"Enter the number:";
    cin>>num;
    prime(num);
    return 0;
}
