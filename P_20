//Write C++ program to find factorial of the given number with the use of function.

#include<iostream>
using namespace std;

int factorial(int n)
{
    int fact=0,i;
    if(n==0 || n== 1)
    {
        fact = 1;
        return fact;
    }
    else
    {
        for(i=0;i<=n;i++)
        {
            fact=fact + n * (n-1);
        }
        return fact;
    }
}
int main()
{
    cout<<"Purohi Akruti K."<<endl;
    cout<<"220130318033"<<endl;
    int num,f;
    cout<<"Enter the number:";
    cin>>num;
    
    f=factorial(num);
    cout<<"The factorial of "<<num<<" is:"<<f<<endl;
    return 0;
}
